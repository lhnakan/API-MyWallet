{
    "env": {
        "commonjs": true,
        "es2021": true,
        "node": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parserOptions": {
        "ecmaVersion": 12
    },
    "rules": {
        "class-methods-use-this": "off",
        "no-unused-vars":"warn",
        "no-multiple-empty-lines": ["warn", { "max": 1 }],
        "space-before-function-paren": ["warn", "always"],
        "indent": ["warn", 4],
        "newline-per-chained-call": ["error", { "ignoreChainWithDepth": 5 }],
        "max-len": ["error", { 
            "code": 90,
            "tabWidth": 4,
            "ignoreStrings": true,
            "ignoreRegExpLiterals": true
        }]
    }
}
